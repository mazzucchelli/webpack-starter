{
    "root": "./dist",
    "js": {
        "output": "/js",
        "inputs": {
            "app": "./src/js/index.js"
        }
    },
    "css": {
        "output": "/css",
        "font_input": "./src/fonts",
        "font_output": "/css/fonts/",
        "inputs": {
            "global": "./src/scss/global.scss",
            "home_page": "./src/scss/home_page.scss"
        }
    },
    "assets": {
        "output": "/assets",
        "sprite_subfolder": "/icons",
        "images_subfolder": "/images"
    },
    "styleguide": {
        "template": "./styleguide.hbs",
        "input": ["./src/uikit/card", "./src/uikit/form"],
        "output": "./styleguide"
    }
}
